<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All interested plans
    </h1>

    <a href="/interested_plans/new" class="btn btn-block btn-outline-secondary">
      Add a new interested plan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "interested_plan_templates/interested_plans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Insurance plan
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @interested_plans.each do |interested_plan| %>
      <tr>
        <td>
          <%= interested_plan.id %>
        </td>

        <td>
          <% if interested_plan.insurance_plan.present? %>
            <a href="/insurance_plans/<%= interested_plan.insurance_plan.id %>">
              <%= interested_plan.insurance_plan.coinsurance_paid_by_patient %>
            </a>
          <% end %>
        </td>

        <td>
          <% if interested_plan.user.present? %>
            <a href="/users/<%= interested_plan.user.id %>">
              <%= interested_plan.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(interested_plan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(interested_plan.updated_at) %> ago
        </td>

        <td>
          <a href="/interested_plans/<%= interested_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @interested_plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
