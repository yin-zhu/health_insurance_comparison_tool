<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All comparison tables
    </h1>

    <a href="/comparison_tables/new" class="btn btn-block btn-outline-secondary">
      Add a new comparison table
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "comparison_table_templates/comparison_tables_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Estimated spend
        </th>

        <th>
          User
        </th>

        <th>
          Insurance plan
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comparison_tables.each do |comparison_table| %>
      <tr>
        <td>
          <%= comparison_table.id %>
        </td>

        <td>
          <%= comparison_table.estimated_spend %>
        </td>

        <td>
          <% if comparison_table.user.present? %>
            <a href="/users/<%= comparison_table.user.id %>">
              <%= comparison_table.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if comparison_table.insurance_plan.present? %>
            <a href="/insurance_plans/<%= comparison_table.insurance_plan.id %>">
              <%= comparison_table.insurance_plan.coinsurance_paid_by_patient %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(comparison_table.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(comparison_table.updated_at) %> ago
        </td>

        <td>
          <a href="/comparison_tables/<%= comparison_table.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @comparison_tables, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
