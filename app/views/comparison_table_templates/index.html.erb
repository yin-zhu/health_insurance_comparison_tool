<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All comparison tables
    </h1>

    <a href="/comparison_tables/new" class="btn btn-block btn-outline-secondary">
      Add a new comparison table
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Estimated spend
        </th>

        <th>
          User
        </th>

        <th>
          Insurance plan
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comparison_tables.each do |comparison_table| %>
      <tr>
        <!-- Display comparison_table.id start -->
        <td>
          <%= comparison_table.id %>
        </td>
        <!-- Display comparison_table.id end -->

        <!-- Display comparison_table.estimated_spend start -->
        <td>
          <%= comparison_table.estimated_spend %>
        </td>
        <!-- Display comparison_table.estimated_spend end -->

        <!-- Display comparison_table.user_id start -->
        <td>
          <%= comparison_table.user.email %>
        </td>
        <!-- Display comparison_table.user_id end -->

        <!-- Display comparison_table.insurance_plan_id start -->
        <td>
          <%= comparison_table.insurance_plan.coinsurance_paid_by_patient %>
        </td>
        <!-- Display comparison_table.insurance_plan_id end -->

        <!-- Display comparison_table.created_at start -->
        <td>
          <%= time_ago_in_words(comparison_table.created_at) %> ago
        </td>
        <!-- Display comparison_table.created_at end -->

        <!-- Display comparison_table.updated_at start -->
        <td>
          <%= time_ago_in_words(comparison_table.updated_at) %> ago
        </td>
        <!-- Display comparison_table.updated_at end -->

        <td>
          <a href="/comparison_tables/<%= comparison_table.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @comparison_tables, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
