<h1>
  Add a new comparison table
</h1>


<hr>

<!-- Form comparison_table start -->
<form action="/create_comparison_table" method="post">
<!-- Form comparison_table end -->

  <!-- Label and input for estimated_spend start -->
  <div class="form-group">
    <label for="estimated_spend">
      Estimated spend
    </label>

    <!-- Input for estimated_spend start -->
    <input type="text" id="estimated_spend" name="estimated_spend" class="form-control">
    <!-- Input for estimated_spend end -->
  </div>
  <!-- Label and input for estimated_spend end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @comparison_table.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for insurance_plan_id start -->
  <div class="form-group">
    <label for="insurance_plan_id">
      Insurance plan
    </label>

    <!-- Input for insurance_plan_id start -->
    <%= select_tag(:insurance_plan_id, options_from_collection_for_select(InsurancePlan.all, :id, :coinsurance_paid_by_patient, @comparison_table.insurance_plan_id), :class => "form-control") %>
    <!-- Input for insurance_plan_id end -->
  </div>
  <!-- Label and input for insurance_plan_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create comparison table
  </button>
</form>

<hr>

<a href="/comparison_tables">
  Go back
</a>
