<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    <a href="/users/new" class="btn btn-block btn-outline-secondary">
      Add a new user
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          User name
        </th>

        <th>
          Birthday
        </th>

        <th>
          State
        </th>

        <th>
          Tobacco use
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <!-- Display user.id start -->
        <td>
          <%= user.id %>
        </td>
        <!-- Display user.id end -->

        <!-- Display user.email start -->
        <td>
          <%= user.email %>
        </td>
        <!-- Display user.email end -->

        <!-- Display user.password start -->
        <td>
          <%= user.password %>
        </td>
        <!-- Display user.password end -->

        <!-- Display user.user_name start -->
        <td>
          <%= user.user_name %>
        </td>
        <!-- Display user.user_name end -->

        <!-- Display user.birthday start -->
        <td>
          <%= user.birthday %>
        </td>
        <!-- Display user.birthday end -->

        <!-- Display user.state start -->
        <td>
          <%= user.state %>
        </td>
        <!-- Display user.state end -->

        <!-- Display user.tobacco_use start -->
        <td>
          <%= user.tobacco_use %>
        </td>
        <!-- Display user.tobacco_use end -->

        <!-- Display user.created_at start -->
        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <!-- Display user.created_at end -->

        <!-- Display user.updated_at start -->
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>
        <!-- Display user.updated_at end -->

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @users, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
