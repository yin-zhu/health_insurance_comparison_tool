<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User #<%= @user.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/users" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/users/<%= @user.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @user.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @user.password %>
      </dd>

      <dt>
        User name
      </dt>
      <dd>
        <%= @user.user_name %>
      </dd>

      <dt>
        Birthday
      </dt>
      <dd>
        <%= @user.birthday %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @user.state %>
      </dd>

      <dt>
        Tobacco use
      </dt>
      <dd>
        <%= @user.tobacco_use %>
      </dd>

      <dt>
        Estimated cost
      </dt>
      <dd>
        <%= @user.estimated_cost %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "user_templates/user_user_plans" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "user_templates/user_interested_plans" %>
  </div>
</div>
