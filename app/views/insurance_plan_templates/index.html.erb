<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All insurance plans
    </h1>

    <a href="/insurance_plans/new" class="btn btn-block btn-outline-secondary">
      Add a new insurance plan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "insurance_plan_templates/insurance_plans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Coinsurance paid by patient
        </th>

        <th>
          Deductible
        </th>

        <th>
          Monthly premium
        </th>

        <th>
          Plan name
        </th>

        <th>
          Comp table
        </th>

        <th>
          Age group
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @insurance_plans.each do |insurance_plan| %>
      <tr>
        <td>
          <%= insurance_plan.id %>
        </td>

        <td>
          <%= insurance_plan.coinsurance_paid_by_patient %>
        </td>

        <td>
          <%= insurance_plan.deductible %>
        </td>

        <td>
          <%= insurance_plan.monthly_premium %>
        </td>

        <td>
          <%= insurance_plan.plan_name %>
        </td>

        <td>
          <%= insurance_plan.comp_table_id %>
        </td>

        <td>
          <%= insurance_plan.age_group %>
        </td>

        <td>
          <%= time_ago_in_words(insurance_plan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(insurance_plan.updated_at) %> ago
        </td>

        <td>
          <a href="/insurance_plans/<%= insurance_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @insurance_plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
