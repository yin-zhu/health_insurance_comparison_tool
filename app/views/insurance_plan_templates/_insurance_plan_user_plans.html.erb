<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Plans

    <a data-toggle="collapse" href="#insurance_plan_user_plans_new_form">
      Add interested plan
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @insurance_plan.user_plans.each do |interested_plan| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/interested_plans/<%= interested_plan.id %>">
          <%= interested_plan.insurance_plan_id %>
        </a>

        <a href="/delete_interested_plan_from_insurance_plan/<%= interested_plan.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="insurance_plan_user_plans_new_form">
        <%= render partial: "insurance_plan_templates/insurance_plan_user_plans_new_form" %>
      </div>
    </div>

  </ul>
</div>
